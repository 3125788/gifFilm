<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
>    
	<!-- topBar -->
	<RelativeLayout 
	    android:layout_height="40dp"
	    android:layout_width="fill_parent"
	    android:background="#015EAC"
	>
	    <ImageView 
	    	android:layout_height="wrap_content"    
	    	android:layout_width="wrap_content"
	    	android:layout_alignParentLeft="true"
	    	android:layout_marginLeft="10dp"
	    	android:layout_centerVertical="true"
	    	android:background="@drawable/top_image"
	    />
	    <!-- 
	    	    	    <include 
	        layout="@layout/share_btns"
   		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="5dp"
	     />
	     -->

	</RelativeLayout>	
   	<RelativeLayout 
			 android:layout_height="wrap_content"   
			 android:layout_width="wrap_content"
			 android:layout_marginTop="10dp"
   	>
	<ImageView 
	    	 android:id="@+id/home_saved_image"
	        android:layout_height="wrap_content"   
			 android:layout_width="wrap_content"
			 android:layout_alignParentLeft="true"
			 android:layout_marginLeft="4.4dp"
			 android:src="@drawable/image_edit" 
			 android:layout_marginBottom="-1dp"
	/>
   	       	
 	  	<View 
			android:layout_height="6dp"   	
			android:layout_width="fill_parent"
			android:background="#E3741E"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:layout_marginTop="-1dp"
			android:layout_below="@id/home_saved_image"
  	 	/>
   	</RelativeLayout>
	<RelativeLayout 
		 android:layout_height="wrap_content"   
		 android:layout_width="wrap_content"
		 android:layout_weight="1"
		 android:layout_marginLeft="5dp"
		 android:layout_marginRight="5dp"
		 android:layout_marginBottom="10dp"
	 >
   	    
	<!-- 编辑区域 -->
	<FrameLayout 
		android:layout_height="fill_parent"    
		android:layout_width="fill_parent"
		android:layout_weight="1"
		android:layout_marginTop="2dp"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
	>
	    <EditText 
			android:id="@+id/share_edit"
			android:layout_height="fill_parent"	        
			android:layout_width="fill_parent"
			android:gravity="top"
			android:text="#Gif胶卷#"
			android:hint="说点什么呗。。。"
			android:background="@null"
	     />
	    <TextView 
	    	android:id="@+id/share_text_word"
	    	android:layout_height="wrap_content"    
	    	android:layout_width="wrap_content"
	    	android:text="144"
	    	android:textColor="#000000"
	    	android:textSize="15sp"
	    	android:layout_gravity="bottom"
	    	android:layout_marginBottom="10dp"
	    	android:layout_marginLeft="10dp"
	    />
	   	<com.wz.gif.decoder.GifView
			android:id="@+id/share_gifView"
			android:layout_height="270dp"    
			android:layout_width="200dp"
			android:enabled="false"
			android:layout_gravity="right|bottom"
			android:layout_marginBottom="10dp"
			android:layout_marginRight="5dp"
		/>
		<ProgressBar
		    android:id="@+id/share_progressBar"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:indeterminate="false"
		    android:indeterminateDrawable="@drawable/loading" 
		    android:visibility="gone"
		/>

	</FrameLayout>
 	  	<View 
			android:layout_height="fill_parent"   	
			android:layout_width="2dp"
			android:background="#E3741E"
			android:layout_marginTop="-1dp"
			android:layout_alignParentLeft="true"
  	 	/>
 	  	<View 
			android:layout_height="fill_parent"   	
			android:layout_width="2dp"
			android:background="#E3741E"
			android:layout_alignParentRight="true"
			
  	 	/>
 	  	<View 
			android:layout_height="2dp"   	
			android:layout_width="fill_parent"
			android:background="#E3741E"
			android:layout_alignParentBottom="true"
  	 	/>
	</RelativeLayout>
</LinearLayout>
<!-- 淡色背景 -->
	<LinearLayout 
	android:id="@+id/share_virtualLayout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#60000000"
	android:visibility="invisible"
	>
	</LinearLayout>
		<include
	    android:id="@+id/share_btns"
	    android:layout_width="170dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    layout="@layout/share_btns" 
	/>
    <Button 
     	android:id="@+id/share_btn_ok"
     	android:layout_gravity="top|right"
     	android:layout_marginTop="3dp"
     	android:layout_marginRight="5dp"
      	android:layout_height="38dp"   
     	android:layout_width="50dp"
     	android:text="上传"
     	android:textSize="17sp"
     	android:textColor="#FFFFFF"
     	android:background="@drawable/share_btn_ok_selector"
     />
</FrameLayout>
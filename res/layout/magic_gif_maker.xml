<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
>
	<!-- topBar -->
	<RelativeLayout 
	    android:layout_height="40dp"
	    android:layout_width="fill_parent"
	    android:background="#015EAC"
	>
	    <ImageView 
	    	android:layout_height="wrap_content"    
	    	android:layout_width="wrap_content"
	    	android:layout_alignParentLeft="true"
	    	android:layout_marginLeft="10dp"
	    	android:layout_centerVertical="true"
	    	android:background="@drawable/top_image"
	    />
	    <Button 
	    	android:id="@+id/magic_btn_ok"
	    	android:layout_marginTop="3dp"
	    	android:layout_marginRight="5dp"
	     	android:layout_height="38dp"   
	    	android:layout_width="50dp"
	    	android:text="完成"
	    	android:textSize="17sp"
	    	android:textColor="#FFFFFF"
	    	android:layout_alignParentRight="true"
	    	android:background="@drawable/magic_btn_ok_selector"
	    />
	    <!-- 
	    	    <View
	        android:layout_width="1dp"
	        android:layout_height="45dp"
	        android:layout_toLeftOf="@id/magic_btn_ok"
	        android:background="#C1C1C1" />
	     -->
   	    <Button 
	    	android:id="@+id/magic_btn_changeback"
	     	android:layout_marginTop="3dp"
	     	android:layout_marginRight="5dp"
	      	android:layout_height="38dp"   
	     	android:layout_width="50dp"
	     	android:text="背景"
	     	android:textSize="17sp"
	     	android:textColor="#FFFFFF"
	    	android:layout_toLeftOf="@id/magic_btn_ok"
	    	android:background="@drawable/magic_btn_back_selector"
	    />
	</RelativeLayout>	
	<RelativeLayout 
			 android:layout_height="wrap_content"   
			 android:layout_width="wrap_content"
			 android:layout_marginTop="10dp"
   	>
	<ImageView 
	    	 android:id="@+id/home_saved_image"
	        android:layout_height="wrap_content"   
			 android:layout_width="wrap_content"
			 android:layout_alignParentLeft="true"
			 android:layout_marginLeft="4.5dp"
			 android:src="@drawable/image_saved" 
			 android:layout_marginBottom="-1dp"
	/>
   	       	
 	  	<View 
			android:layout_height="6dp"   	
			android:layout_width="fill_parent"
			android:background="#525152"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:layout_marginTop="-1dp"
			android:layout_below="@id/home_saved_image"
  	 	/>
   	</RelativeLayout>
   	
	<RelativeLayout 
		 android:layout_height="wrap_content"   
		 android:layout_width="wrap_content"
		 android:layout_weight="1"
		 android:layout_marginLeft="5dp"
		 android:layout_marginRight="5dp"
		 android:layout_marginBottom="10dp"
	 >
	    
		 <FrameLayout 
		    android:id="@+id/frameLayout"
		 	android:layout_height="wrap_content"
		 	android:layout_width="wrap_content"
		 	android:layout_centerHorizontal="true"
		 	android:layout_marginTop="5dp"
		 >
		 <com.wz.gif.view.MagicView 
		 	android:id="@+id/magic_image"
		 	android:layout_height="320dp"    
		 	android:layout_width="240dp"
		 	android:layout_marginLeft="5dp"
		 	android:layout_marginRight="5dp"
		 	android:layout_marginTop="10dp"
		 	android:scaleType="matrix"
		 	android:clickable="true"
		 />
		 <ImageView 
			android:id="@+id/magic_pen_size_image"
			android:layout_width="wrap_content"	     
			android:layout_height="wrap_content"
			android:src="@drawable/pen_size_image"
			android:layout_gravity="center"
			android:visibility="gone"
		  />
		 </FrameLayout>
		 
		<SeekBar 
		 	android:id="@+id/magic_paintSize_seekBar"
		 	android:layout_height="wrap_content"   
		 	android:layout_width="200dp"
		 	android:layout_below="@id/frameLayout"
		 	android:max="20"
		 	android:layout_marginTop="5dp"
		 	android:layout_marginBottom="5dp"
		 	android:progress="10"
		 	android:layout_centerHorizontal="true"
		 	android:thumb="@drawable/seek_btn"
		 />	    
 	  	<View 
			android:layout_height="fill_parent"   	
			android:layout_width="2dp"
			android:background="#525152"
			android:layout_marginTop="-1dp"
			android:layout_alignParentLeft="true"
  	 	/>
 	  	<View 
			android:layout_height="fill_parent"   	
			android:layout_width="2dp"
			android:background="#525152"
			android:layout_alignParentRight="true"
			
  	 	/>
 	  	<View 
			android:layout_height="2dp"   	
			android:layout_width="fill_parent"
			android:background="#525152"
			android:layout_alignParentBottom="true"
  	 	/>
	</RelativeLayout> 
	 
	<RelativeLayout 
		android:layout_height="wrap_content"    
		android:layout_width="fill_parent"
		android:layout_gravity="bottom"
		android:layout_marginBottom="10dp"
	>
	<FrameLayout 
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="5dp"
	>
	<Button
	    android:id="@+id/magic_btn_eraser"
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:background="@drawable/magic_eraser"
	/>
	<ImageView 
	    android:id="@+id/magic_eraser_mask"
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:src="@drawable/indexer_mask"
	    android:visibility="gone"
	/>	    
	</FrameLayout>
	
	<!-- 铅笔 -->
	<FrameLayout 
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft="5dp"
	>
   	<Button 
   		android:id="@+id/magic_btn_pen"
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:background="@drawable/magic_pen"
   	/>
	<ImageView 
	    android:id="@+id/magic_pen_mask"
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:src="@drawable/indexer_mask"
	/>	    
	</FrameLayout>
	</RelativeLayout>
	
</LinearLayout>